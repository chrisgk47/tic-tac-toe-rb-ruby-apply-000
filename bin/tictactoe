#!/usr/bin/env ruby

require_relative '../lib/tic_tac_toe'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
display_board(board)

play(board)

describe '#move' do

    it 'does not allow for a default third argument' do
      board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

      expect{move(board, 1)}.to raise_error(ArgumentError)
    end
